<h1 style="color:Tomato;">Login</h1>
   <%= form_tag '/login' do %>
   <div style="color:DodgerBlue;"><%= label_tag :username%></div>
   <%= text_field_tag :username %><br>
   <div style="color:DodgerBlue;"><%= label_tag :password%></div>
   <%= password_field_tag :password%><br>
   <%= submit_tag "Login"%><br><br>
<%end%>
<%= button_to "New User", '/users/new', method: :get%><br>
<a href="/index">Back</a>